{
  "name": "@chromatic-protocol/sdk",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "exports": {
    ".": {
      "node": "./cjs/index.js",
      "default": "./esm/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/@chromatic-protocol/sdk.git"
  },
  "files": [
    "src",
    "cjs",
    "esm"
  ],
  "peerDependencies": {
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/contracts": "^5.0.0",
    "@ethersproject/providers": "^5.0.0",
    "ethers": "^5"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/contracts": "^5.0.0",
    "@ethersproject/providers": "^5.0.0",
    "@types/jest": "^29.5.2",
    "ethers": "^5.7.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "build:cjs": "rm -rf cjs && tsc --build --force tsconfig.cjs.build.json",
    "build:esm": "rm -rf esm && tsc --build --force tsconfig.build.json",
    "build": "yarn build:cjs && yarn build:esm",
    "clean": "rm -rf docs cjs esm",
    "docs": "typedoc",
    "docs:markdown": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts",
    "docs:sdk": "cd site && yarn install && yarn clear && yarn build"
  },
  "version": "0.1.0-rc.37"
}
