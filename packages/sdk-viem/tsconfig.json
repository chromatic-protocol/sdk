{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "outDir": "./esm",
    "target": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "",
    "declarationMap": true,
    "lib": [
      "ES2021.String"
    ]
  }
}
